        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rts.MainMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rts.LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rts.GameMap"
            android:label="@string/title_activity_game_map" >
        </activity>
        <activity
            android:name="com.rts.DifficultySettings"
            android:label="@string/title_activity_difficulty_settings" >
